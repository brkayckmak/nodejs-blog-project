<div class="container">
    <div class="edit-section">
        <form class="edit-form" action="/edit-writing" method="POST">
            <input class="index" type="text" name="writingIndex" value=<%= i %> readonly>
            <label for="writingHeader">Header</label>
            <input type="text" name="writingHeader" value=<%= writings[i]["writingHeader"]  %> />
